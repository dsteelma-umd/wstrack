<div class="row">
  <div class="col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
    <div class="panel panel-default" style="margin-top: 30px">
      <div class="panel-heading">
        <h3 class="panel-title">Login Required</h3>
      </div>
      <div class="panel-body">
        This system is restricted to authorized users only.

        <%= form_tag('/users/auth/saml', method: 'post', data: {turbo: false}) do %>
          <button type='submit' class='center-block btn btn-default'>Login</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
