<% provide(:title, 'Location Maps') %>

<p id="notice"><%= notice %></p>

<h1>Location Maps</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Value</th>
      <th>Regex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_maps.each do |location_map| %>
      <tr>
        <td><%= location_map.code %></td>
        <td><%= location_map.value %></td>
        <td><%= location_map.regex %></td>
        <td><%= link_to 'Show', location_map %></td>
        <td><%= link_to 'Edit', edit_location_map_path(location_map) %></td>
        <td><%= link_to 'Destroy', location_map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location map', new_location_map_path %>
